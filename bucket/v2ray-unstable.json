{
    "version": "0",
    "description": "A platform for building proxies to bypass network restrictions. (Unstable version)",
    "homepage": "https://github.com/v2fly/V2FlyBleedingEdgeBinary",
    "license": "MIT",
    "persist": "config.json",
    "architecture": {
        "64bit": {
            "url": "",
            "hash": ""
        },
        "32bit": {
            "url": "",
            "hash": ""
        }
    },
    "bin": [
        "v2ctl.exe",
        "v2ray.exe",
        "wv2ray.exe"
    ],
    "checkver": {
        "url": "https://scoop-sushi.vercel.app/api/v2ray-unstable",
        "regex": "(?<tag>[\\w-]+) (?<version>.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/v2fly/V2FlyBleedingEdgeBinary/releases/download/$matchTag/v2ray-windows-64.zip"
            },
            "32bit": {
                "url": "https://github.com/v2fly/V2FlyBleedingEdgeBinary/releases/download/$matchTag/v2ray-windows-32.zip"
            }
        },
        "hash": {
            "url": "$url.dgst",
            "regex": "SHA512= $sha512"
        }
    }
}
